<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".CompassFragment">


        <include
            android:id="@+id/distance_info"
            layout="@layout/distance_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <include
            android:id="@+id/compass_image"
            layout="@layout/compass_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4" />

        <include
            android:id="@+id/set_destination_button"
            layout="@layout/set_destination_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>
</layout>